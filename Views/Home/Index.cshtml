@{
    ViewData["Title"] = "Home Page";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

<style>
    .jumbotron {
        background-image: url('https://static1.thetravelimages.com/wordpress/wp-content/uploads/2022/09/Skagit-Valley-tulip-farm.jpg?q=50&fit=contain&w=1140&h=&dpr=1.5'); /* Unsplash image */
        background-size: cover;
        background-position: center;
        color: #fff;
        padding: 4rem;
        margin-top: 2rem;
        text-shadow: 0 0 10px rgba(0, 0, 0, 0.5); /* Add text shadow for better readability */
    }

        .jumbotron h1 {
            font-size: 3.5rem;
            font-weight: bold;
        }

        .jumbotron p {
            font-size: 1.25rem;
            margin-top: 1rem;
        }

        .jumbotron a {
            color: #fff;
            text-decoration: underline;
        }

            .jumbotron a:hover {
                color: #f8f9fa;
            }

        .jumbotron ul li {
            font-size: 1.1rem;
            margin-bottom: 0.5rem;
        }

        .jumbotron .btn {
            margin: 1rem 0.5rem;
        }

    .testimonial img {
        width: 100px;
        height: 100px;
        border-radius: 50%; /* Creates a circular image */
        object-fit: cover; /* Ensures the image fills the circle while maintaining aspect ratio */
        margin-bottom: 1rem;
    }

    .testimonial .name {
        font-weight: bold;
        margin-bottom: 0.5rem;
    }
</style>

<div class="jumbotron text-center">
    <div class="container">
        <h1 class="display-4">Welcome to Agri Energy Connect</h1>
        <p class="lead">Empowering Sustainable Agriculture with Renewable Energy</p>
        <hr class="my-4">
        <p>Join our community to:</p>
        <div class="row">
            <div class="col-md-6">
                <ul class="list-unstyled">
                    <li><i class="fas fa-seedling"></i> Explore best practices in sustainable farming</li>
                    <li><i class="fas fa-solar-panel"></i> Discover green energy solutions for agriculture</li>
                </ul>
            </div>
            <div class="col-md-6">
                <ul class="list-unstyled">
                    <li><i class="fas fa-graduation-cap"></i> Access educational resources and training</li>
                    <li><i class="fas fa-handshake"></i> Collaborate on projects and funding opportunities</li>
                </ul>
            </div>
        </div>
        <a href="Identity/Account/Register" class="btn btn-primary btn-lg">Sign Up</a>
        <a href="Identity/Account/Login" class="btn btn-outline-light btn-lg">Login</a>
    </div>
</div>


